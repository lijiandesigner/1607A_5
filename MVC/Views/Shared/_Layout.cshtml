    <script>
        function clock() {
            var curent = new Date();
            var y, m, date, day, hs, ms, ss, theDateStr;
            y = curent.getFullYear();
            m = curent.getMonth() + 1;
            date = curent.getDate();
            day = curent.getDay();
            hs = curent.getHours();
            ms = curent.getMinutes();
            ss = curent.getSeconds();
            switch (day) {
                case "0": day = "日";
                    break;
                case "1": day = "一";
                    break;
                case "2": day = "二";
                    break;
                case "3": day = "三";
                    break;
                case "4": day = "四";
                    break;
                case "5": day = "五";
                    break;
                case "6": day = "六";
                    break;
            }
            theDateStr = y + "年" + m + "月" + date + "日    星期" + day + "       " + hs + ":" + ms + ":" + ss;
            $("#time").text(theDateStr);
            window.setTimeout(clock, 1000);

        }

    </script>
