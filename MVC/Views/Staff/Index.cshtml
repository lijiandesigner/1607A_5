@model IEnumerable<Model.Staff>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <h2>@Html.ActionLink("添加员工", "StaffAdd")</h2>
    </p>
    @foreach (var item in Model)
    {
        <div style="width:500px;height:260px;padding:20px,10px; float:left;margin:50px;background-color:#89c3f3;">
            <div style="float:left;width:100px;height:100px;padding-bottom:40px;padding-top:40px;padding-left:20px;padding-right:20px;">
                <img src="@item.StaffPhoto" alt="" style="width:100px;height:100px;border-radius:50%" />
            </div>
            <div style="float:left">

            </div>
        </div>
    }
    <p>
        @using (Html.BeginForm())
        {
            <span>员工ID：</span> <input id="Text1" type="text" name="staffid" />
            <span>员工姓名：</span> <input id="Text1" type="text" name="name" />
            <span>员工编号：</span> <input id="Text1" type="text" name="no" />
            <span>员工部门：</span> @Html.DropDownList("bumenid", ViewBag.list as SelectList, "请选择")
            <span>员工职位：</span> @Html.DropDownList("zhiid", ViewBag.jobList as SelectList, "请选择")
            <input id="Submit1" type="submit" value="查询" />
        }

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffPhoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffSex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffPhone)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DepartId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.StaffPhoto" alt="" style="width:100px;height:100px;border-radius:50%" />
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffId</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffNo</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffName</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffCard.Substring(0, 6).....@item.StaffCard.Substring(item.StaffCard.Length - 4)</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffSex</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffAge</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StaffPhone</span>
                </td>

                <td>
                    <span style="line-height:100px">@item.DepartId</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.JobId</span>
                </td>
                <td>
                    <span style="line-height:100px">@item.StartTime</span>
                </td>
                <td>

                    <span style="line-height:100px">
                        @Html.ActionLink("修改", "StaffGetById", new { id = item.StaffId }) |
                        @Html.ActionLink("删除", "StaffDelete", new { id = item.StaffId })
                    </span>
                </td>
            </tr>
        }

    </table>
</body>
</html>
